{
  "name": "typeconvert-monorepo",
  "private": true,
  "bolt": {
    "workspaces": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "node ./scripts/postinstall",
    "build": "bolt ws run build",
    "build:all": "yarn build",
    "prettier": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "test": "jest",
    "clean": "rimraf packages/*/lib && rimraf packages/*/build && rimraf packages/*/node_modules && rimraf node_modules"
  },
  "dependencies": {
    "@babel/code-frame": "^7.0.0",
    "@babel/parser": "^7.4.2",
    "@babel/types": "^7.4.0",
    "@moped/babel-preset": "*",
    "@types/babel__code-frame": "^7.0.1",
    "@types/babylon": "^6.16.5",
    "@types/cross-spawn": "^6.0.0",
    "@types/immutable": "^3.8.7",
    "@types/jest": "^22.2.0",
    "@types/mkdirp": "^0.5.1",
    "@types/node": "^8.0.33",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/resolve": "^0.0.8",
    "@types/rimraf": "^2.0.2",
    "add": "^2.0.6",
    "babel-core": "^6.26.0",
    "babylon": "^6.18.0",
    "bolt": "^0.22.6",
    "cross-spawn": "^6.0.5",
    "flow-bin": "^0.66.0",
    "immutable": "^4.0.0-rc.12",
    "jest": "^21.2.1",
    "lsr": "^2.0.0",
    "prettier": "^1.10.2",
    "resolve": "^1.10.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.1",
    "type-assertions": "^1.0.0",
    "typescript": "^3.3.4000",
    "w": "^1.1.0"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>.*(node_modules)(?!.*typeconvert.*).*$"
    ],
    "transform": {
      "/test-cases/.+\\.(js|js\\.flow|d\\.ts|ts|tsx)$": "./scripts/test-transform.js",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test-cases/.+/index\\.(js|js\\.flow|d\\.ts|ts|tsx)$|(\\.|/)(test|spec)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "flow",
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
