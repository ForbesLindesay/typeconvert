{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node ./scripts/postinstall",
    "bootstrap": "lerna bootstrap",
    "build": "git add . && lerna run prepublish --since master",
    "build:all": "lerna run prepublish",
    "prerelease": "yarn build:all",
    "prettier": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "release": "lerna publish",
    "test": "jest",
    "clean": "rimraf packages/*/lib && rimraf packages/*/build && rimraf packages/*/node_modules && rimraf node_modules"
  },
  "devDependencies": {
    "@moped/babel-preset": "*",
    "@types/cross-spawn": "^6.0.0",
    "@types/jest": "^21.1.5",
    "@types/mkdirp": "^0.5.1",
    "@types/node": "^8.0.33",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/rimraf": "^2.0.2",
    "babel-core": "^6.26.0",
    "cross-spawn": "^6.0.5",
    "flow-bin": "^0.66.0",
    "jest": "^21.2.1",
    "lerna": "^2.4.0",
    "lsr": "^2.0.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.1.4",
    "typescript": "^2.5.3"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>.*(node_modules)(?!.*typeconvert.*).*$"
    ],
    "transform": {
      "/test-cases/.+\\.(js|js\\.flow|d\\.ts|ts|tsx)$": "./scripts/test-transform.js",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test-cases/.+/index\\.(js|js\\.flow|d\\.ts|ts|tsx)$",
    "moduleFileExtensions": [
      "flow",
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
